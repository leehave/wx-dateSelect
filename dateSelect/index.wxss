.calendar {
    background: #fff;
}

.calendar-month-title {
    padding: 60rpx 0;
    font-family: Helvetica;
    font-size: 32rpx;
    color: #333333;
    text-align: center;
    line-height: 32rpx;
}

.calendar-days {
    overflow: hidden;
}

.calendar-days__item {
    position: relative;
    float: left;
    width: 14.285%;
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #fff;
    font-size: 28rpx;
    color: #333333;
    margin-bottom: 18rpx;
}

.calendar-days__rest {
    width: 24rpx;
    height: 24rpx;
    position: absolute;
    right: 6rpx;
    top: 6rpx;
}

.calendar-days__rest .rest {
    width: 24rpx;
    height: 24rpx;
    font-size: 18rpx;
    color: #fd3b4e;
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    align-items: center;
}

.calendar-days__rest.disable .rest {
    color: #DADADA;
}

.calendar-days__rest.disable .rest::before {
    border: 1px solid #DADADA;
}

.calendar-days__rest .rest::before {
    border: 1px solid #409EFF;
    border-radius: 4px;
    box-sizing: border-box;
}

.calendar-days__item.select-range .calendar-days__rest .rest::before {
    border: 1px solid #FFFFFF;
}

.calendar-days__item.select-range .calendar-days__rest .rest {
    color: #fff;
}

.calendar-days__num {
    padding-top: 16rpx;
    height: 28rpx;
    font-size: 28rpx;
}

.calendar-days__status {
    font-size: 22rpx;
    height: 28rpx;
    margin-top: 8rpx;
    margin-bottom: 16rpx;
}

.calendar-days__item.special {
    font-size: 24rpx;
    color: #e03b4c;
}

.calendar-days__item.duration {
    color: #b2b2b2;
}

.calendar-days__item.disable {
    color: #dadada;
}

.calendar-days__item.nohouse.isCancelNoHouse {
    background: #fff;
    color: #333333;
    opacity: 1;
}

.calendar-days__item.disable .calendar-days__num {
    position: relative;
}

.calendar-days__item.disable .calendar-days__num .line-through {
    position: absolute;
    width: 90%;
    top: 34rpx;
    left: 6rpx;
    border-top: 1px solid #DADADA;
    transform: rotate(-45deg);
}

.calendar-days__item.nohouse {
    color: #333;
    opacity: 0.4;
    background: #d8d8d8;
}

.calendar-days__item.select-start,.calendar-days__item.select-end,.calendar-days__item.select-start.isCancelNoHouse,.calendar-days__item.select-end.isCancelNoHouse,.calendar-days__item.select-end.nohouse {
    background: #409EFF;
    color: #ffffff;
}

.calendar-days__item.select-start.activeWeekend .calendar-days__num,.calendar-days__item.select-end.activeWeekend .calendar-days__num,.calendar-days__item.select-range.activeWeekend .calendar-days__num,.calendar-days__item.select-end.nohouse.isCancelNoHouse.activeWeekend .calendar-days__num,.calendar-days__item.select-end.nohouse.activeWeekend .calendar-days__num {
    color: #ffffff;
}

.calendar-days__item.select-end.nohouse.activeWeekend {
    opacity: 1;
}

.calendar-days__item.activeWeekend .calendar-days__num {
    color: #f00920;
}

.calendar-days__item.nohouse.activeWeekend .calendar-days__num {
    color: #333;
}

.calendar-days__item.nohouse.isCancelNoHouse.activeWeekend .calendar-days__num {
    color: #f00920;
}

.calendar-days__item.activeWeekend.disable .calendar-days__num {
    color: #dadada;
}

.calendar-days__item.select-start {
    border-radius: 15rpx 0 0 15rpx;
}

.calendar-days__item.border-radius {
    border-radius: 15rpx;
}

.calendar-days__item.select-end {
    border-radius: 0 15rpx 15rpx 0;
}

.calendar-days__item.select-range {
    color: #ffffff;
    background: rgba(112, 168, 240, 0.7);
}


.calendar-title {
    padding: 60rpx 40rpx 60rpx 40rpx;
    display: flex;
    background: #fff;
    justify-content: space-between;
    align-items: flex-end;
    border-top: 1px solid #F4F4F4;
}

.calendar-title.aligincenter {
    align-items: center;
}

.checkin,.checkout {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
}

.checkout {
    align-items: flex-end;
}

.checkin-title,.checkout-title {
    font-size: 42rpx;
    color: #999999;
}

.big-bottom {
    margin-bottom: -6rpx;
}

.small-title {
    font-size: 28rpx;
}

.checkout-date,.checkin-date {
    display: flex;
    align-items: flex-end;
    margin-top: 20rpx;
}

.checkout-date .date,.checkin-date .date {
    font-size: 42rpx;
    color: #333333;
    line-height: 42rpx;
    margin-right: 10rpx;
}

.scroll_view {
    height: calc(100vh - 270rpx - 120rpx);
}

.scroll {
    height: calc(100vh - 270rpx);
}

.total-day .totalday {
    flex: 1;
    font-size: 22rpx;
    color: #ec1329;
    text-align: center;
    line-height: 22rpx;
    margin-bottom: 10rpx;
    margin-right: 6rpx;
}

.totalday.disactive {
    color: #999999;
}

.total-day .line::before {
    border-bottom: 1px solid #409EFF;
}

.total-day .disactive.line::before {
    border-bottom: 1px solid #999999;
}

.checkout-date .week,.checkin-date .week {
    font-size: 24rpx;
    color: #333333;
    line-height: 24rpx;
    margin-bottom: 6rpx;
}

.weekend {
    display: flex;
    background-color: #fff;
    justify-content: space-around;
    padding: 20rpx 0;
}

.weekend::before {
    border-top: 1px solid #e9e9e9;
}

.weekend::after {
    border-bottom: 1px solid #e9e9e9;
}

.br1 {
    position: relative;
}

.br1::before {
    width: 200%;
    height: 200%;
    transform: scale(.5);
    position: absolute;
    content: '';
    top: 0;
    left: 0;
    transform-origin: 0 0;
}

.br1::after {
    width: 200%;
    height: 0;
    transform: scale(.5);
    position: absolute;
    content: '';
    bottom: 0;
    left: 0;
    transform-origin: 0 0;
}

.weekend-day {
    font-size: 24rpx;
    color: #666666;
    line-height: 24rpx;
}

.footer-tips {
    background: #fff;
    padding: 30rpx 0 40rpx 0;
    font-size: 28rpx;
    color: #999999;
    text-align: center;
    line-height: 32rpx;
}

.footer-action {
    display: flex;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    z-index: 1;
    background: #fff;
    box-shadow: 0 1px 6px 0 rgba(0,0,0,0.10);
}

.footer-action-shipei {
    bottom: 68rpx;
}

.footer-action .clear {
    width: 250rpx;
    font-size: 28rpx;
    color: #666666;
    text-align: center;
    line-height: 120rpx;
}

.footer-action .action {
    flex: 1;
    background: #dadada;
    font-weight: 400;
    font-size: 34rpx;
    color: #ffffff;
    letter-spacing: 0;
    text-align: center;
    line-height: 120rpx;
}

.footer-action .action.active {
    background: #409EFF;
}